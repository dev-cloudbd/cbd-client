#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
sysconfdir=@sysconfdir@

cat <<EOF
[Unit]
Description=CloudBD NBD client connection for %i
Documentation=man:cbd-client
PartOf=cbd.service
Before=dev-%i.device
[Service]
Type=forking
ExecStart=@sbindir@/cbd-client %i
[Install]
RequiredBy=dev-%i.device
EOF
